<ContentPage
    x:Class="MuseoViewUI.Views.MuseumDetailsView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewmodels="clr-namespace:MuseoViewUI.ViewModels"
    Title="Детайли за музея">

    <!--<ContentPage.BindingContext>
        <viewmodels:MuseumDetailsViewModel />
    </ContentPage.BindingContext>-->

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="16">

            <!--  Име на музея  -->
            <Label
                FontAttributes="Bold"
                FontSize="26"
                HorizontalOptions="Center"
                Text="{Binding Museum.Name}" />

            <!--  Локация  -->
            <Label FontAttributes="Bold" Text="Локация:" />
            <Label FontSize="16" Text="{Binding Museum.Location}" />

            <!--  Регион и Тип (тук могат да се мапнат от ID към име, ако имаш enums)  -->
            <Label FontAttributes="Bold" Text="Регион:" />
            <Label Text="{Binding RegionName}" />

            <Label FontAttributes="Bold" Text="Тип:" />
            <Label Text="{Binding MuseumType}" />

            <!--  Работно време  -->
            <Label FontAttributes="Bold" Text="Работно време:" />
            <Label FontSize="16" Text="{Binding Museum.OpeningHours}" />

            <!--  Описание  -->
            <Label FontAttributes="Bold" Text="Описание:" />
            <Label
                FontSize="14"
                LineBreakMode="WordWrap"
                Text="{Binding Museum.Description}" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
