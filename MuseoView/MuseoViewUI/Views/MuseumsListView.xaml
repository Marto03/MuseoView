<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MuseoViewUI.Views.MuseumsListView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="MuseumsListView">
    <Grid Padding="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  Падащо меню за избор на област  -->
        <Picker
            x:Name="RegionsPicker"
            Title="Избери област"
            WidthRequest="300" />

        <!--  Списък с музеи в избраната област  -->
        <CollectionView
            x:Name="MuseumsCollectionView"
            Grid.Row="1"
            Margin="0,10,0,0">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <StackLayout Padding="10">
                        <Label FontSize="Medium" Text="{Binding Name}" />
                    </StackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>